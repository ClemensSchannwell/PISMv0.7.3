VPATH +=:../src/coupler/

#exec_default += ../bin/pccr ../bin/pcctest
exec_default += ../bin/pcctest

other_sources += pccoupler.cc pPDDcoupler.cc pcctest.cc pccr.cc

../bin/pccr : pccr.o pccoupler.o pPDDcoupler.o ${LIBPISMNAME}
	${CXXLINKER} pccr.o pccoupler.o pPDDcoupler.o ${ICE_LIB_FLAGS} -o $@

../bin/pcctest : pcctest.o pccoupler.o pPDDcoupler.o ${LIBPISMNAME}
	${CXXLINKER} pcctest.o pccoupler.o pPDDcoupler.o ${ICE_LIB_FLAGS} -o $@

